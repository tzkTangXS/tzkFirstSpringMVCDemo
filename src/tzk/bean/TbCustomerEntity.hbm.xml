<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="tzk.bean.TbCustomerEntity" table="tb_customer" schema="tzkSpringTest">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="username" >
            <column name="username" sql-type="varchar(30)" not-null="true"></column>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(30)" not-null="true"></column>
        </property>
        <property name="customerName">
            <column name="customerName" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="telephone">
            <column name="telephone" sql-type="varchar(50)" length="50"/>
        </property>
    </class>

</hibernate-mapping>